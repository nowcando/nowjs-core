{
  "name": "nowjs-core",
  "description": "NowCanDo Javascript Core [nowjs-core] is a  library written by TypeScript code maintains under Apache 2.0 licence",
  "version": "0.9.15",
  "private": false,
  "scripts": {
    "debug": "npm run-script build:debug ",
    "build:test": "npm run-script clean:dist && tsc --p ./tsconfig.test.json",
    "build:debug": "npm run-script clean:dist && tsc --p ./tsconfig.debug.json",
    "build:release": "npm run-script clean:release && tsc --p ./tsconfig.release.json",
    "clean": "npm run clean:dist",
    "clean:dist": "rm -rf ./dist/*",
    "clean:release": "rm -rf ./lib/*",
    "test": "jest  --no-cache --config ./jest.json",
    "test:watch": "jest --watch --config ./jest.json",
    "coverage": " jest  --no-cache --coverage  --config ./jest.json ",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run lint && npm run test && npm run build:release",
    "preversion": "npm test && npm run changelog:update",
    "version": "npm run build:release ",
    "postversion": "git push && git push --tags && npm run clean:release",
    "release:patch": "npm version patch -m \"Upgrade to %s for patch and some bug fixes.\"",
    "release:minor": "npm version minor -m \"Upgrade to %s for minor enhancments & and bug fixes.\"",
    "release:major": "npm version major -m \"Upgrade to %s for major features and bug fixes.\"",
    "changelog:update": "github-changes -o nowcando -r nowjs-core --no-merges && git commit -a -m 'updated CHANGELOG.md'"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "author": "Saeed Tabrizi at NowCanDo.Com",
  "email": "dev at NowCanDo.Com",
  "license": "Apache-2.0",
  "keywords": [
    "nowjs",
    "nowjscore",
    "nowjs-core",
    "nowcando",
    "Saeed Tabrizi",
    "Typescript",
    "light weight",
    "library",
    "LOB",
    "line of business",
    "linq",
    "validation"
  ],
  "bugs": {
    "url": "https://github.com/nowcando/nowjs-core/issues"
  },
  "homepage": "https://github.com/nowcando/nowjs-core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nowcando/nowjs-core.git"
  },
  "dependencies": {
    "reflect-metadata": ">=0.1.10"
  },
  "devDependencies": {
    "@types/jest": ">=20.0.5",
    "@types/node": ">=8.0.17",
    "full-icu": ">=1.1.3",
    "jest": ">=20.0.4",
    "jest-environment-node-debug": ">=2.0.0",
    "ts-jest": ">=20.0.7",
    "ts-node": ">=3.2.1",
    "typescript": ">=2.4.2"
  }
}
